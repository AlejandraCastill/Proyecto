                <TableSection Title="Producción Inicial (Qi):">

                </TableSection>
                <TableSection Title="Constante del modelo (b):">

                </TableSection>
                <TableSection Title="Declinación inicial (Di):">

                </TableSection>
                <TableSection Title="Precisión:">

                </TableSection>
                <TableSection>
                    <ViewCell>
                            <StackLayout>
                            <Button Text="Calcular" BackgroundColor="#8FBC8F" CornerRadius="10" />
                        </StackLayout>
                    </ViewCell>
                </TableSection>
                <TableSection >
                    <SwitchCell Text="Mostar Acumulado" />
                </TableSection>
            </TableRoot>
        </TableView>
            
        </StackLayout>
    </ContentPage.Content>
